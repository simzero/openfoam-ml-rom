FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../inputs"

outsidePoint #calc "$boxLength*0.00075";

defaultFieldValues
(
    volScalarFieldValue alpha 1
);

regions
(
    surfaceToCell
    {
        file            $stlNameFull;
        outsidePoints   (($outsidePoint 0 0));
        includeCut      false;
        includeInside   true;
        includeOutside  false;
        nearDistance    -1;

        curvature       -100;

        fieldValues
        (
            volScalarFieldValue alpha 0
        );
    }
);


